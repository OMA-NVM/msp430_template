{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Upload Target to MSP",
            "type": "shell",
            "command": "cd MSPFlasher* ; ./MSP430Flasher -w ../build/msp.hex -v -g -z [VCC]",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "showReuseMessage": true,
                "clear": true,
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        }
    ]
}
